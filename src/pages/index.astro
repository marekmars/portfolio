---
import MainHead from '../components/MainHead.astro';
import H from '../components/H.astro';
import Sw from '../components/Sw.astro';
import Me from '../components/Me.astro';
import F from '../components/F.astro';
import Wc from '../components/Wc.astro';

import 'tippy.js/dist/tippy.css';
import 'tippy.js/themes/light.css';
import BackToTop from '../components/BackToTop.astro';
---

<html lang="en">
  <head>
    <MainHead />
  </head>
  <body class="bg-primary">
    <H />

    <div
      id="scroll-wrapper"
      class="overflow-hidden w-screen h-screen">
      <main>
        <Wc />
        <Sw />
        <Me />
      </main>

      <F />
    </div>
    <BackToTop />
    <div
      id="splash"
      class="z-10 fixed origin-bottom w-full h-full bg-green-400 top-0 right-0">
      <script>
        // splash screen
        import anime from 'animejs';

        anime
          .timeline()
          .add({
            targets: '#hi',
            scale: 2,
            padding: '1.5%',
            duration: 350, // Duraci贸n reducida a la mitad
            delay: 100, // Retraso reducido a la mitad
          })
          .add({
            targets: '.zl-char',
            translateY: ['150%', 0],
            opacity: [0, 1],
            easing: 'easeOutExpo',
            duration: 450, // Duraci贸n reducida a la mitad
            delay: (el, i) => 15 * i, // Retraso reducido a la mitad
          })
          .add({
            targets: '#hi',
            color: '#4ade80',
            zIndex: 0,
            duration: 250, // Duraci贸n reducida a la mitad
          });

        anime({
          targets: '#splash',
          scaleY: 0,
          duration: 700, // Duraci贸n reducida a la mitad 700
          easing: 'easeInOutExpo',
          delay: 850, // Retraso reducido a la mitad 850
        });

        anime({
          targets: '#zl',
          color: '#fff',
          zIndex: 0,
          duration: 50, // Duraci贸n reducida a la mitad
          delay: 1200, // Retraso reducido a la mitad
        });

        anime({
          targets: '#title',
          translateY: ['150%', 0],
          opacity: [0, 1],
          duration: 150, // Duraci贸n reducida a la mitad
          easing: 'easeInOutQuad',
          delay: 1200, // Retraso reducido a la mitad
        });

        // smooth scrolling
        import Scrollbar from 'smooth-scrollbar';
        import OverscrollPlugin from 'smooth-scrollbar/plugins/overscroll';

        Scrollbar.use(OverscrollPlugin);
        const scroll = Scrollbar.init(
          document.getElementById('scroll-wrapper') as HTMLElement,
          {
            plugins: { overscroll: { damping: 0.15, maxOverscroll: 200 } },
          }
        );
        //  custom scrollbar
        Scrollbar.detachStyle();

        const track = document.querySelector('.scrollbar-track-y') as HTMLElement;
        track.style.cssText =
          'position: absolute; right: 0; top: 0; width: 6px; height: 100%';
        const thumb = document.querySelector('.scrollbar-thumb-y') as HTMLElement;
        thumb.style.cssText =
          'background-color: #393f61; border-radius: 10px; opacity: 0; transition: opacity 200ms';

        let timeout: ReturnType<typeof setTimeout>;
        scroll.addListener(() => {
          thumb.style.opacity = '1';
          clearTimeout(timeout);
          timeout = setTimeout(() => (thumb.style.opacity = '0'), 2000);
        });

        // nami (I mean navigation)
        const navs = document.querySelectorAll('.nav');
        const ele = document.querySelectorAll('.sitw');
        const mouse = document.getElementById('mouse') as HTMLElement;
        const btnTop = document.getElementById('btn-back-to-top') as HTMLElement;

        navs.forEach((nav, i) =>
          nav.addEventListener('click', () => {
            console.log(ele[i]);
            scroll.scrollIntoView(ele[i] as HTMLElement);
          })
        );
        mouse.addEventListener('click', () =>
          scroll.scrollIntoView(ele[1] as HTMLElement)
        );
        btnTop.addEventListener('click', () =>
          scroll.scrollIntoView(ele[0] as HTMLElement)
        );
        scroll.addListener(({ offset }) => {
          if (offset.y > 50) {
            btnTop.classList.remove('hidden');
            btnTop.classList.add('block');
          }
          if (offset.y <= 50) {
            
            btnTop.classList.add('hidden');
            btnTop.classList.remove('block');
          }
        });

        // tippy
        import tippy from 'tippy.js';

        tippy('[data-tippy-content]', {
          animation: 'shift-away-extreme',
          theme: 'light',
          allowHTML: true,
          touch: true,
        });

        // dynamic tooltip for email
        const emailInstance = tippy('#email', {
          content: 'Copy',
          theme: 'light',
          hideOnClick: false,
          touch: true,
          onHidden: (e) => e.setContent('Copy'),
        })[0];

        // copy email
        const copyEmail = document.getElementById('email') as HTMLElement;
        copyEmail.addEventListener('click', () => {
          navigator.clipboard.writeText('zayar.lynn.dev@gmail.com');
          emailInstance.setContent('Copied!! ');
        });
      </script>
    </div>
  </body>
</html>
